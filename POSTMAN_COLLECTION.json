          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"jane@example.com\",\n  \"subject\": \"General Inquiry\",\n  \"message\": \"I'd like to learn more about the SkillSync Hub platform.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/contact",
