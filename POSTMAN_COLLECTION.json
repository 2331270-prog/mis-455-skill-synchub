          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/collab/:id",
              "host": ["{{base_url}}"],
              "path": ["collab", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "request_id_here",
                  "type": "string"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
