{
  "name": "skillsync-hub-server",
  "version": "1.0.0",
  "description": "Backend for SkillSync Hub - Collaborative Talent & Portfolio Sharing Platform",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --watchAll --verbose",
    "test:ci": "jest --ci --coverage",
    "seed": "node seed/index.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "api",
    "skillsync",
    "collaboration"
  ],
  "author": "SkillSync Hub Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/seed/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
